<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/layerstate">
    <!-- Drag handle icon, text, then delete icon at end -->
    <TextView
        android:id="@+id/curr_layer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/curr_layer_drag_handle"
        android:paddingStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    <ImageView
        android:id="@+id/curr_layer_drag_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/md_keylines"
        android:src="@drawable/ic_drag_handle_white_24px" />
</RelativeLayout>