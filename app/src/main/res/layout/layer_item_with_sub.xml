<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/layerstate">
    <TextView
        android:id="@+id/layer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/layer_info"
        android:layout_alignParentStart="true"
        android:paddingStart="@dimen/text_padding_left"
        android:paddingTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    <TextView
        android:id="@+id/layer_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/layer_info"
        android:layout_below="@id/layer_text"
        android:layout_alignParentStart="true"
        android:paddingStart="@dimen/text_padding_left"
        android:paddingBottom="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="italic" />
    <ImageView
        android:id="@+id/layer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/md_keylines"
        android:paddingEnd="@dimen/md_keylines"
        android:src="@android:drawable/ic_menu_info_details"/>
</RelativeLayout>
