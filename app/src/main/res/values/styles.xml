<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/dividerColor</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Theme for layer activity for TabLayout, no toolbar! -->
    <style name="AppTheme.Tabs" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

        <!-- Change the text style of the autocomplete suggestions -->
        <item name="textAppearanceSearchResultTitle">@style/TextAppearance.AppCompat.Menu</item>
    </style>

</resources>
